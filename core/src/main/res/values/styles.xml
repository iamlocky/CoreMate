<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 对话框基础样式 -->

    <style name="CoreWindowAnimSlideTopStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/core_slide_top_in</item>
        <item name="android:windowExitAnimation">@anim/core_slide_bottom_out</item>
    </style>

    <style name="CoreWindowAnimSlideBottomStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/core_slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/core_slide_top_out</item>
    </style>

    <style name="CoreWindowAnimFadeInStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/core_fade_in</item>
        <item name="android:windowExitAnimation">@anim/core_fade_out</item>
    </style>

    <style name="CoreWindowAnimSlideLeftStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/core_slide_left_in</item>
        <item name="android:windowExitAnimation">@anim/core_slide_right_out</item>
    </style>

    <style name="CoreWindowAnimSlideRightStyle" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/core_slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/core_slide_left_out</item>
    </style>

    <!-- 从下往上滑动弹出的面板对话框样式 -->
    <style name="PanelDlgStyle">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside" tools:ignore="NewApi">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>